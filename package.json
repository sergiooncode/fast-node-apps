{
  "name": "fast-node-apps",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter @fast-node-apps/api db:generate",
    "db:push": "pnpm --filter @fast-node-apps/api db:push",
    "db:migrate": "pnpm --filter @fast-node-apps/api db:migrate",
    "db:studio": "pnpm --filter @fast-node-apps/api db:studio"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
